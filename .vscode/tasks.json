{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".antlr/antlr-4.7.1-complete.jar",
                "org.antlr.v4.Tool",
                "MATLAB.g4",
                "-o",
                ".antlr"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp",
                ".antlr;.antlr/antlr-4.7.1-complete.jar",
                ".antlr/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "generate"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                ".antlr;.antlr/antlr-4.7.1-complete.jar",
                "org.antlr.v4.gui.TestRig",
                "MATLAB",
                "matlab_file",
                "-gui",
                "-tokens",
                "-tree",
                "${config:antlr4.run.fileName}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "generate",
                "build"
            ]
        }
    ]
}